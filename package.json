{
  "name": "xbrowsersync-api",
  "description": "The REST API service component of the xBrowserSync application.",
  "version": "1.1.13",
  "author": "xBrowserSync",
  "license": "GPL-3.0-only",
  "main": "dist/api.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/xbrowsersync/api.git"
  },
  "bugs": {
    "url": "https://github.com/xbrowsersync/api/issues"
  },
  "scripts": {
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "echo Running unit/integration tests... & jest --clearCache && jest --config jestconfig.unit.json --runInBand",
    "test:e2e": "echo Running e2e tests... & jest --clearCache && jest --config jestconfig.e2e.json --runInBand",
    "coverage": "mkdirp coverage && npm run test:unit -- --coverage",
    "lint": "echo Running lint... & eslint src",
    "build:api:dev": " && tsc --sourceMap",
    "build:api": "tsc",
    "build": "npm run lint && npm run build:api",
    "postbuild": "echo Done!",
    "watch:api": "tsc-watch --onSuccess \"node ./dist/api.js\"",
    "watch:docs": "webpack serve --config webpack.config.js --mode development",
    "watch": "npm run build:api:dev && concurrently --kill-others \"npm run watch:api\" \"npm run watch:docs\""
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8"
  },
  "dependencies": {
    "bootstrap": "^4.6.2",
    "bunyan": "^1.8.15",
    "core-decorators": "^0.20.0",
    "cors": "^2.8.5",
    "country-list": "^2.3.0",
    "deepmerge": "^4.3.1",
    "dompurify": "^2.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^5.5.1",
    "express-routes-versioning": "^1.0.1",
    "helmet": "^4.6.0",
    "marked": "^2.1.3",
    "mkdirp": "^1.0.4",
    "moment": "^2.29.4",
    "mongodb": "^3.6.5",
    "mongoose": "^5.13.16",
    "nocache": "^2.1.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bunyan": "^1.8.8",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^26.0.24",
    "@types/marked": "^2.0.5",
    "@types/mongodb": "^3.6.20",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^14.18.40",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@types/uuid-parse": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "concurrently": "^6.5.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.7",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^1.1.5",
    "file-loader": "^6.2.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.5.0",
    "mini-css-extract-plugin": "^1.6.2",
    "prettier": "^2.8.6",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-loader": "^8.4.0",
    "ts-node": "^10.9.1",
    "tsc-watch": "^4.6.2",
    "typescript": "^4.9.5"
  }
}
